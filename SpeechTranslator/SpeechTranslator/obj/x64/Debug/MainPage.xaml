<Page x:ConnectionId='1'
    x:Class="SpeechTranslator.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SpeechTranslator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#fff0f0ff">
        <TextBlock x:ConnectionId='2' x:Name="micText" HorizontalAlignment="Left" Margin="30,32,0,0" Text="Input" />
        <ComboBox x:ConnectionId='3' x:Name="micBox" HorizontalAlignment="Left" Margin="100,24,0,0" Width="400" DisplayMemberPath="Name"/>

        <TextBlock x:ConnectionId='4' x:Name="speakerText" HorizontalAlignment="Left" Margin="30,74,0,0" Text="Output" />
        <ComboBox x:ConnectionId='5' x:Name="speakerBox" HorizontalAlignment="Left" Margin="100,66,0,0" Width="400" DisplayMemberPath="Name"/>

        <TextBlock x:ConnectionId='6' x:Name="fromTextBlock" HorizontalAlignment="Left" Margin="30,118,0,0" Text="From" VerticalAlignment="Top" />
        <ComboBox x:ConnectionId='7' x:Name="fromComboBox" HorizontalAlignment="Left" Margin="100,110,0,0" Width="160"/>

        <TextBlock x:ConnectionId='8' x:Name="toTextBlock" HorizontalAlignment="Left" Margin="300,118,0,0" Text="To" />
        <ComboBox x:ConnectionId='9' x:Name="toComboBox" HorizontalAlignment="Left" Margin="340,110,0,0" Width="160"                                               />

        <TextBlock x:ConnectionId='10' x:Name="voiceTextBlock" HorizontalAlignment="Left" Margin="30,162,0,0" Text="Voice" />
        <ComboBox x:ConnectionId='11' x:Name="voiceComboBox" HorizontalAlignment="Left" Margin="100,154,0,0" Width="400"/>

        <Button x:ConnectionId='12' x:Name="StartButton" Content="Start" Width="120" Height="40" Margin="100,198,0,0" VerticalAlignment="Top"                          />
        <Button x:ConnectionId='13' x:Name="StopButton" Content="Stop" Width="120" IsEnabled="false" Height="40" Margin="240,198,0,0" VerticalAlignment="Top"                         />
        <Button x:ConnectionId='14' x:Name="ClearButton" Content="Clear" Width="120" IsEnabled="false" Height="40" Margin="380, 198,0,0" VerticalAlignment="Top"                           />
        
        <ListView x:ConnectionId='15' x:Name="listView" BorderThickness="1" BorderBrush="LightGray" Background="White" HorizontalAlignment="Left" Margin="100,260,0,24" Width="400"                                         >
            <ListView.ItemTemplate>
                <DataTemplate                          >
                    <StackPanel x:ConnectionId='16'>
                        <TextBlock x:ConnectionId='17' TextWrapping="WrapWholeWords"                             />
                        <TextBlock x:ConnectionId='18' TextWrapping="WrapWholeWords"                             FontWeight="Bold" />
                        <TextBlock x:ConnectionId='19'                        Foreground="Red" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>

